<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/arc_background">

    <!-- Square Logo in the Center -->
    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_logo"
        android:background="#1C1F1E"
        android:scaleType="centerInside"
        android:contentDescription="App Logo" />

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp"
        android:text="Welcome to QRCode Attender"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center" />

    <!-- Log In As Text -->
    <TextView
        android:id="@+id/logInAsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="Log In as..."
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textAlignment="center" />

    <!-- Horizontal Buttons for Professor and Student -->
    <LinearLayout
        android:id="@+id/roleSelectionLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/logInAsText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnProfessor"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:text="Professor"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1C1F1E" />

        <Button
            android:id="@+id/btnStudent"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:text="Student"
            android:textSize="18sp"
            android:textAllCaps="false"
            android:textColor="#FFFFFF"
            android:backgroundTint="#1C1F1E" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/noAccountLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/noAccountText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account?"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/btnRegister"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="Sign up!"
            android:textColor="#1C1F1E"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAlignment="center" />
    </LinearLayout>

