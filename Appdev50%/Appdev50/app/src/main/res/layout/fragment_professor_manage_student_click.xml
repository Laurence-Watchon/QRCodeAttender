<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Professor_manage_student_click">

    <!-- Scrollable Section for Class Details -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvYearAndBlock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Year and Block"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvClassDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Class Code - Subject Name"
                android:textSize="18sp"
                android:layout_marginTop="8dp" />

            <!-- List of students -->
            <LinearLayout
                android:id="@+id/studentListContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp">
                <!-- Dynamically add student TextViews here -->
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btnTakeAttendance"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="Take Attendance"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnAddStudent"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="Add Student"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btnHistory"
            android:layout_width="115dp"
            android:layout_height="wrap_content"
            android:text="History"
            android:layout_weight="1"/>

    </LinearLayout>

</LinearLayout>